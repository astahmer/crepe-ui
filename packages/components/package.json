    "@pacha/styled-system": "workspace:^",
    "@pandacss/dev": "^0.17.0",
    "framer-motion": "^10.16.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.31",
